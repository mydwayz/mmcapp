<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/albumtitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:singleLine="false"
            android:text="Medium Text Medium Text Medium Text Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20dp" android:layout_weight="0.7"/>

        <ImageView android:layout_gravity="right"
            android:id="@+id/albumImage" android:layout_weight="0.3"
            android:layout_width="@dimen/px_150_dp"
            android:layout_height="@dimen/px_150_dp"
            android:background="@drawable/ic_launcher"/>
    </LinearLayout>

    <TextView android:layout_margin="10dp"
        android:id="@+id/albumdesc" android:maxEms="50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:layout_centerHorizontal="true"
        android:text="Medium Text Medium Text Medium Text Medium Text Medium Text Medium Text Medium Text Medium Text Medium Text Medium Text Medium Text Medium Text Medium Text Medium Text Medium Text Medium Text Medium Text Medium Text Medium Text Medium Text Medium Text Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

</RelativeLayout>