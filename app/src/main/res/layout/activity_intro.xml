<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    tools:context="com.mahageetamusic.classes.IntroActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout"
        android:background="@drawable/ic_splashscreen"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/facebooklgin"
            android:background="@android:color/white">

            <Button
                android:id="@+id/login"
                style="@style/IntroTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/color_border"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/login_title"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/signup"
                style="@style/IntroTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/color_border"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/signup_title"
                android:textAllCaps="false" />
        </LinearLayout>

        <Button
            android:id="@+id/facebooklgin"
            style="@style/IntroTextView1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/color_border"
            android:text="Login with Facebook"
            android:textAllCaps="false" />
    </LinearLayout>
</RelativeLayout>
